{
  "compilerOptions": {
    "outDir": "./build/",
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2018",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "src": ["./src"]
    },
  },
  "include": ["src/**/*"],
  "files": [
    "custom.d.ts"
  ]
}
